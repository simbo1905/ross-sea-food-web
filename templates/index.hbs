        {{/if}}
        
        // Build information
        window.BUILD_INFO = {
            timestamp: "{{ build_timestamp }}",
            timestampUnix: {{ build_timestamp_unix }},
            version: "{{ version }}"
        };
        
        // Debug logging
        console.log("üèóÔ∏è Build info:", window.BUILD_INFO);
